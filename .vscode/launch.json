  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mocha Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/contract",
      "program": "${workspaceFolder}/contract/node_modules/mocha/bin/_mocha",
      "args": [
        "test/**/*.js",
        // "--grep",
        // // "test_case_name",
        // "should withdraw contract balance to contract owner address",
        "--ui",
        "bdd" // Test interface (e.g., "bdd", "tdd")
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
