{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format

  // See https://code.visualstudio.com/docs/editor/variables-reference
  // for available variables which can be used in tasks.json, launch.json and settings.json files.

  "version": "2.0.0",
  "type": "shell",
  "presentation": {
    "reveal": "always",
    "panel": "dedicated", // options: 'dedicated', 'shared'
    "showReuseMessage": false // Controls whether to show the "Terminal will be reused by tasks, press any key to close it" message.
  },

  "tasks": [
    {
      "label": "nft_minter->e2e->local->1.up",
      "command": "docker compose --project-name nft_minter_e2e_local --file docker_composes/docker-compose.e2e.local.yml up --build --detach"
    },
    {
      "label": "nft_minter->e2e->local->2.logs",
      "command": "docker compose --project-name nft_minter_e2e_local --file docker_composes/docker-compose.e2e.local.yml logs --timestamps --follow"
    },
    {
      "label": "nft_minter->e2e->local->3.down",
      "command": "docker compose --project-name nft_minter_e2e_local --file docker_composes/docker-compose.e2e.local.yml down"
    },
    {
      "label": "nft_minter->e2e->local->4.contracts_setup",
      "command": "npx hardhat --network localhost run scripts/setupE2E.js",
      "options": {
        "cwd": "./contract"
      }
    },
    {
      "label": "nft_minter->e2e->local->5.launch_dapp",
      "command": "open -a 'Google Chrome' 'http://127.0.0.1:8080/'"
    },
    {
      "label": "nft_minter->e2e->remote->1.up",
      "command": "docker compose --project-name nft_minter_e2e_remote --file docker_composes/docker-compose.e2e.remote.yml up --build --detach"
    },
    {
      "label": "nft_minter->e2e->remote->2.logs",
      "command": "docker compose --project-name nft_minter_e2e_remote --file docker_composes/docker-compose.e2e.remote.yml logs --timestamps --follow"
    },
    {
      "label": "nft_minter->e2e->remote->3.down",
      "command": "docker compose --project-name nft_minter_e2e_remote --file docker_composes/docker-compose.e2e.remote.yml down"
    },
    {
      "label": "nft_minter->e2e->remote->4.contracts_setup",
      "command": "npx hardhat --network remote run scripts/setupE2E.js",
      "options": {
        "cwd": "./contract"
      }
    },
    {
      "label": "nft_minter->e2e->remote->5.launch_dapp",
      "command": "open -a 'Google Chrome' 'https://nft-minter.onrender.com'"
    }
  ]
}
